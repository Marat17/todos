<p id="notice"><%= notice %></p>

<h1>Задачи</h1>

<% Project.all.each do |project| %>
<h2> <%= project.title %></h2>
<ul>
<% project.todos.each do |todo| %>

<li><%= todo.text %></li>

<% end %>
</ul>
<% end %>

<button id="mybutton">+</button>

<div id="mydiv" style="display:none" title="">
<h1>Новая задача</h1>

<%= render 'form', todo: @todo %>
<button id="cancelb">ОТМЕНА</button>
</div>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Iscompleted</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.text %></td>
        <td><%= todo.isCompleted %></td>
        <td><%= todo.project.title %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
